<Window x:Class="StudentManagementSystem.View.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid  >

        <ListView Name="ItemList" Margin="25,20,25,25" Height="195" Width="730" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="Black">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number" Width="70"  DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="250" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Faculty" Width="205" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="Reg No" Width="205"  DisplayMemberBinding="{Binding RegNum}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid>
            <CheckBox x:Name="EnableCheckBox" Content="Edit" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Bold" Height="23" Margin="15,230,15,0" BorderBrush="#FF59FD00" Checked="EnableCheckBox_Checked"/>
        </Grid>


        <Grid x:Name="EditGrid" IsEnabled="{Binding ElementName=EnableCheckBox,Path=IsChecked}" Margin="3,260,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="73" Width="762">
            <Label Content="Name   :" HorizontalAlignment="Left"   VerticalAlignment="Top" FontWeight="Bold" Foreground="Black" FontSize="14" Width="70"/>
            <Label Content="Faculty :" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Foreground="Black" FontWeight="Bold" FontSize="14" Width="70"/>
            <Label Content="Reg no :" HorizontalAlignment="Left" Margin="364,0,0,0" VerticalAlignment="Top" Foreground="Black" FontWeight="Bold" FontSize="14" Width="70"/>
            <TextBox Name="NameTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.FullName,Mode=OneWay}" HorizontalAlignment="Left"  Margin="70,0,0,0" Width="236" Height="26" VerticalAlignment="Top" BorderBrush="#FF919A97" FontSize="14" FontWeight="Bold" FontFamily="Arial" TextChanged="NameTextBox_TextChanged"/>
            <TextBox Name="AddressTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.Address,Mode=OneWay}" HorizontalAlignment="Left" Margin="70,40,0,0" Width="236" Height="26" VerticalAlignment="Top" BorderBrush="#FF919A97" FontSize="14" FontWeight="Bold" FontFamily="Arial"/>
            <TextBox Name="RegnoTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.RegNum,Mode=OneWay}" HorizontalAlignment="Right" Margin="0,0,66,0" Width="236" Height="26" VerticalAlignment="Top" BorderBrush="#FF919A97" FontSize="14" FontWeight="Bold" FontFamily="Arial"/>
        </Grid>

        <Button x:Name="ReadButton" HorizontalAlignment="Left" Click="ReadButton_Click" Margin="29,360,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" Background="#FF10EFC0" Height="40" BorderBrush="#FFFFFBFB" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Path Stretch="Uniform" Data="M 399.5625 598.46875 C 397.90565 598.46875 396.5625 599.8119 396.5625 601.46875 L 396.5625 615.46875 C 396.5625 617.12565 397.90565 618.46875 399.5625 618.46875 L 411.5625 618.46875 C 413.2194 618.46875 414.5625 617.12565 414.5625 615.46875 L 414.5625 605.46875 C 414.5625 601.60276 411.4285 598.46875 407.5625 598.46875 L 399.5625 598.46875 z M 399.5625 600.46875 L 406.5625 600.46875 L 406.5625 605.46875 L 412.5625 605.46875 L 412.5625 615.46875 C 412.5625 616.02105 412.1148 616.46875 411.5625 616.46875 L 399.5625 616.46875 C 399.01022 616.46875 398.5625 616.02105 398.5625 615.46875 L 398.5625 601.46875 C 398.5625 600.91647 399.01022 600.46875 399.5625 600.46875 z M 408.5625 600.5625 C 410.1738 600.88958 411.51355 601.99781 412.15625 603.46875 L 408.5625 603.46875 L 408.5625 600.5625 z M 400.5625 604.46875 L 400.5625 606.46875 L 404.5625 606.46875 L 404.5625 604.46875 L 400.5625 604.46875 z M 400.5625 608.46875 L 400.5625 610.46875 L 410.5625 610.46875 L 410.5625 608.46875 L 400.5625 608.46875 z M 400.5625 612.46875 L 400.5625 614.46875 L 410.5625 614.46875 L 410.5625 612.46875 L 400.5625 612.46875 z " Fill="#FF17314F" Width="17" Height="17" Margin="3,0,0,0"/>
                            <Label Content="Read" Foreground="Black" FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button x:Name="UpdateButton" HorizontalAlignment="Left"  Click="UpdateButton_Click" Margin="127,360,0,0" VerticalAlignment="Top" Height="40" Background="#FF10EFC0" FontWeight="Bold" FontFamily="Arial" BorderBrush="#FFF9F9F9" Width="80" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Path Stretch="Uniform" Data="M 405.625 587.625 L 403.8125 594.3125 L 410.5 592.53125 L 408.96875 591 C 411.62184 589.56391 415.0078 589.94525 417.25 592.1875 L 418.65625 590.78125 C 415.62765 587.75259 410.97718 587.34026 407.5 589.53125 L 405.625 587.625 z M 418.6875 597.03125 L 412 598.84375 L 413.53125 600.375 C 410.87815 601.811 407.49225 601.39855 405.25 599.15625 L 403.84375 600.5625 C 406.87241 603.5912 411.5229 604.03475 415 601.84375 L 416.90625 603.71875 L 418.6875 597.03125 z " Fill="#FF17314F" Width="17" Height="17" Margin="3,0,0,0"/>
                            <Label Content="Update" FontFamily="Arial" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button x:Name="DeleteButton" HorizontalAlignment="Left" Margin="229,360,0,0" Click="DeleteButton_Click" VerticalAlignment="Top" Height="40" FontWeight="Bold" FontFamily="Arial" BorderBrush="#FFFDFDFD" Width="80" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="#FF10EFC0" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Path Stretch="Uniform"  Data="M 364.71875 605.21875 C 363.61418 605.21875 362.71875 606.11418 362.71875 607.21875 L 362.71875 608.21875 L 359.71875 608.21875 C 359.16647 608.21875 358.71875 608.66647 358.71875 609.21875 C 358.71875 609.77103 359.16647 610.21875 359.71875 610.21875 L 360.71875 610.21875 L 360.71875 621.21875 C 360.71875 622.87565 362.0619 624.21875 363.71875 624.21875 L 371.71875 624.21875 C 373.37565 624.21875 374.71875 622.87565 374.71875 621.21875 L 374.71875 610.21875 L 375.71875 610.21875 C 376.27105 610.21875 376.71875 609.77103 376.71875 609.21875 C 376.71875 608.66647 376.27105 608.21875 375.71875 608.21875 L 372.71875 608.21875 L 372.71875 607.21875 C 372.71875 606.11418 371.82335 605.21875 370.71875 605.21875 L 364.71875 605.21875 z M 364.71875 607.21875 L 370.71875 607.21875 L 370.71875 608.21875 L 364.71875 608.21875 L 364.71875 607.21875 z M 362.71875 610.21875 L 372.71875 610.21875 L 372.71875 621.21875 C 372.71875 621.77105 372.27105 622.21875 371.71875 622.21875 L 363.71875 622.21875 C 363.16647 622.21875 362.71875 621.77105 362.71875 621.21875 L 362.71875 610.21875 z M 364.71875 612.21875 L 364.71875 620.21875 L 366.71875 620.21875 L 366.71875 612.21875 L 364.71875 612.21875 z M 368.71875 612.21875 L 368.71875 620.21875 L 370.71875 620.21875 L 370.71875 612.21875 L 368.71875 612.21875 z " Fill="#FF17314F" Width="17" Height="17" Margin="3,0,0,0"/>
                            <Label Content="Delete" FontFamily="Arial" VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button Content="Log out" Margin="630,360,0,0" Height="40" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Logout_Click" FontWeight="Bold" FontSize="20" FontFamily="Arial" Foreground="#FFFDF9F9" Background="#FFFD0303" BorderBrush="#FFFBFBFB" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>



    </Grid>
</Window>
